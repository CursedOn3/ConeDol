// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  isAdmin       Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts          Account[]
  sessions          Session[]
  profiles          Profile[]
  watchlists        Watchlist[]
  continueWatching  ContinueWatching[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Profile {
  id        String   @id @default(cuid())
  name      String
  avatar    String   @default("/avatars/default.png")
  isKids    Boolean  @default(false)
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user             User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  watchlists       Watchlist[]
  continueWatching ContinueWatching[]

  @@unique([userId, name])
}

model Watchlist {
  id         String   @id @default(cuid())
  userId     String
  profileId  String
  tmdbId     Int
  mediaType  String   // 'movie' or 'tv'
  title      String
  posterPath String?
  backdropPath String?
  overview   String?  @db.Text
  addedAt    DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@unique([userId, profileId, tmdbId, mediaType])
}

model ContinueWatching {
  id           String   @id @default(cuid())
  userId       String
  profileId    String
  tmdbId       Int
  mediaType    String   // 'movie' or 'tv'
  title        String
  posterPath   String?
  backdropPath String?
  progress     Float    @default(0) // percentage 0-100
  duration     Int?     // duration in seconds
  currentTime  Int      @default(0) // current playback time in seconds
  seasonNumber Int?     // for TV shows
  episodeNumber Int?    // for TV shows
  lastWatched  DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@unique([userId, profileId, tmdbId, mediaType])
  @@index([userId, profileId])
}

model CustomContent {
  id           String   @id @default(cuid())
  tmdbId       Int?     // Optional: if linked to TMDB
  title        String
  description  String?  @db.Text
  mediaType    String   // 'movie' or 'tv'
  posterUrl    String?
  backdropUrl  String?
  trailerUrl   String?
  videoUrl     String?  // Custom video URL
  genres       String[] // Array of genre strings
  releaseDate  DateTime?
  rating       Float?
  isFeatured   Boolean  @default(false)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([isFeatured, isActive])
}
